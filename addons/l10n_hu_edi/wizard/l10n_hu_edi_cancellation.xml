<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_hu_edi_cancellation_form" model="ir.ui.view">
        <field name="name">l10n_hu_edi.cancellation.form</field>
        <field name="model">l10n_hu_edi.cancellation</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="code"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Request Cancellation" name="button_request_cancel" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>